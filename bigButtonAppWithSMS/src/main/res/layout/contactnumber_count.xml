<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imViewTag"
        android:layout_width="@dimen/tagWidth"
        android:layout_height="@dimen/tagHeight"
        android:background="@drawable/tag"
        android:contentDescription="@string/image"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llRadioButtonHolder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rowHeight"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNumberTypeTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textSkipColor"
            android:textIsSelectable="false"
            android:layout_marginLeft="@dimen/marginTopSkipButton"
            android:textSize="@dimen/txtSizeNormal" />
        
        <FrameLayout
            android:layout_width="@dimen/chkBoxWidth"
            android:layout_height="@dimen/chkBoxHeight"
            android:layout_marginLeft="@dimen/paddingButtons"
            android:layout_marginStart="@dimen/paddingButtons" >

            <RadioButton
                android:id="@+id/rdoButtonNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/checkbox_selector"
                android:button="@null" />

            <Button
                android:id="@+id/btnDisableOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape_disable_button"
                android:padding="@dimen/paddindMargins"
                android:visibility="gone" />
        </FrameLayout>
        
        <TextView
            android:id="@+id/tvContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textIsSelectable="false"
            android:textSize="@dimen/txtSizeLarge" />
    </LinearLayout>
    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rowHeight"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rdoButtonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColorChedckedCont_Num"
            android:textSize="@dimen/txtSizeLarge" />
    </LinearLayout>
    -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewHeight"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/paddingMargins_Right"
        android:layout_marginLeft="@dimen/paddingMargins_Left"
        android:layout_marginRight="@dimen/paddingMargins_Right"
        android:layout_marginStart="@dimen/paddingMargins_Left"
        android:background="@color/borderEditText" />

    <LinearLayout
        android:id="@+id/llViewBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangular_boundary_blue"
        android:visibility="gone" >
    </LinearLayout>

</FrameLayout>