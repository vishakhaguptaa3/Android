<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightTopBar"
        layout="@layout/topbar" />

    <LinearLayout
        android:id="@+id/llTopHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/paddindMargins" >

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/txtInternationalEmerNumber"
            android:textColor="@color/stripDarkBlueColor"
            android:textSize="@dimen/txtSizeMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/stripHeight"
            android:layout_weight=".65"
            android:background="@color/stripDarkBlueColor" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/stripHeight"
            android:layout_weight=".35"
            android:background="@color/topBarColor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgEditText"
        android:orientation="horizontal"
        android:padding="@dimen/paddingSearchBar"
        android:visibility="visible" >

        <SearchView
            android:id="@+id/searchViewCountries"
            style="@style/edittext_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_searchbar"
            android:iconifiedByDefault="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/rowHeightInternationalNumberDial"
            android:layout_weight=".35"
            android:background="@color/topBarColor"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tvCountryHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="Country"
                android:textColor="#fff"
                android:textSize="@dimen/txtSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/rowHeightInternationalNumberDial"
            android:layout_weight=".45"
            android:background="@color/topBarColor"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tvEmergencyNumberHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="Emergency Number"
                android:textColor="#fff"
                android:textSize="@dimen/txtSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/rowHeightInternationalNumberDial"
            android:layout_weight=".20"
            android:background="@color/topBarColor"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tvDialoNowHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="Dial Now"
                android:textColor="#fff"
                android:textSize="@dimen/txtSizeNormal" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lvCountries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:cacheColorHint="@android:color/transparent"
            android:scrollbars="none" >
        </ListView>

        <ListView
            android:id="@+id/lvAlphabets"
            android:layout_width="@dimen/alphabetListWidthIntlEmergency"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:scrollbars="none" >

            <!--
            android:layout_marginEnd="@dimen/paddindMargins"
            android:layout_marginRight="@dimen/paddindMargins"
            -->
        </ListView>
    </RelativeLayout>

</LinearLayout>