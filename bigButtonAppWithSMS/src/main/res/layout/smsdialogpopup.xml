<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/popupWidth"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/paddindPopUps" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Send SMS"
            android:textColor="@color/textSkipColor"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textSize="@dimen/txtSizeLarge" />

        <TextView
            android:id="@+id/tvTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/messageMargin"
            android:gravity="start"
            android:paddingEnd="@dimen/paddingButtons"
            android:paddingLeft="@dimen/paddingButtons"
            android:paddingRight="@dimen/paddingButtons"
            android:paddingStart="@dimen/paddingButtons"
            android:text="To:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="@dimen/txtSizeMedium" />

        <EditText
            android:id="@+id/etTo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightEditText"
            android:layout_marginTop="@dimen/padding_marginEditText"
            android:background="@drawable/edittext_bg_name"
            android:inputType="text"
            android:paddingEnd="@dimen/padding_marginEditText"
            android:paddingLeft="@dimen/padding_marginEditText"
            android:paddingRight="@dimen/padding_marginEditText"
            android:paddingStart="@dimen/padding_marginEditText"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtSizeLarge" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/messageMargin"
            android:gravity="start"
            android:paddingEnd="@dimen/paddingButtons"
            android:paddingLeft="@dimen/paddingButtons"
            android:paddingRight="@dimen/paddingButtons"
            android:paddingStart="@dimen/paddingButtons"
            android:text="Message:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="@dimen/txtSizeMedium" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightSMSBox"
            android:layout_marginTop="@dimen/padding_marginEditText"
            android:background="@drawable/edittext_bg_name"
            android:inputType="textCapSentences"
            android:singleLine="false"
            android:paddingEnd="@dimen/padding_marginEditText"
            android:paddingLeft="@dimen/padding_marginEditText"
            android:paddingRight="@dimen/padding_marginEditText"
            android:paddingStart="@dimen/padding_marginEditText"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtSizeMedium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9c9c9c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightButton"
            android:layout_gravity="center_vertical"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/txtCancel"
            android:textColor="@color/textBlueColor"
            android:textSize="@dimen/txtSizeMedium" />

        <View
            android:id="@+id/viewSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9c9c9c" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightButton"
            android:layout_gravity="center_vertical"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/txtSend"
            android:textColor="@color/textBlueColor"
            android:textSize="@dimen/txtSizeMedium" />
    </LinearLayout>

</LinearLayout>