<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightTopBar"
        layout="@layout/topbar" />

    <TextView
        android:id="@+id/tvRegistrationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/borderStrokeRadius"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/txtSizeLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/paddingButtons"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingEnd="@dimen/paddings_Features"
        android:paddingLeft="@dimen/paddings_Features"
        android:paddingRight="@dimen/paddings_Features"
        android:paddingStart="@dimen/paddings_Features" >

        <!-- android:layout_marginTop="@dimen/paddings_Contents" -->
        <!--
         android:layout_marginTop="@dimen/paddings_Contents"
             <TextView
            android:id="@+id/tvRegistrationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@color/textColorFrom"
            android:textIsSelectable="false"
            android:textSize="@dimen/txtSizeMedium" />
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.3"
                android:orientation="vertical" >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:fillViewport="false"
                    android:paddingBottom="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:scrollbars="none" >

                    <!-- android:layout_height="@dimen/scrollHeight" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg_name"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <!-- android:layout_marginTop="@dimen/paddings_Contents" -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/heightInstructionLayoutLast"
                                android:baselineAligned="false"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2" >

                                    <ImageView
                                        android:layout_width="@dimen/heightCheckBox"
                                        android:layout_height="@dimen/heightCheckBox"
                                        android:layout_gravity="center"
                                        android:background="@drawable/tick"
                                        android:contentDescription="@string/image" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8" >

                                    <TextView
                                        android:id="@+id/tvRegBenefitFirst"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical|start"
                                        android:singleLine="false"
                                        android:text="@string/txtRegisterBenefitFirstPremiumFeature"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/txtSizeNormal" />
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/viewHeight"
                                android:background="@color/borderEditText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/heightInstructionLayoutLast"
                                android:baselineAligned="false"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2" >

                                    <ImageView
                                        android:layout_width="@dimen/heightCheckBox"
                                        android:layout_height="@dimen/heightCheckBox"
                                        android:layout_gravity="center"
                                        android:background="@drawable/tick"
                                        android:contentDescription="@string/image" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8" >

                                    <TextView
                                        android:id="@+id/tvRegBenefitSecond"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical|start"
                                        android:singleLine="false"
                                        android:text="@string/txtRegisterBenefitSecondPremiumFeature"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/txtSizeNormal" />
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/viewHeight"
                                android:background="@color/borderEditText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/heightInstructionLayoutSecond"
                                android:baselineAligned="false"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2" >

                                    <ImageView
                                        android:layout_width="@dimen/heightCheckBox"
                                        android:layout_height="@dimen/heightCheckBox"
                                        android:layout_gravity="center"
                                        android:background="@drawable/tick"
                                        android:contentDescription="@string/image" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8" >

                                    <TextView
                                        android:id="@+id/tvRegBenefitThird"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical|start"
                                        android:singleLine="false"
                                        android:text="@string/txtRegisterBenefitThirdPremiumFeature"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/txtSizeNormal" />
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/viewHeight"
                                android:background="@color/borderEditText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/heightInstructionLayoutSecond"
                                android:baselineAligned="false"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2" >

                                    <ImageView
                                        android:layout_width="@dimen/heightCheckBox"
                                        android:layout_height="@dimen/heightCheckBox"
                                        android:layout_gravity="center"
                                        android:background="@drawable/tick"
                                        android:contentDescription="@string/image" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8" >

                                    <TextView
                                        android:id="@+id/tvRegBenefitFourth"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical|start"
                                        android:singleLine="false"
                                        android:text="@string/txtRegisterBenefitFourthPremiumFeature"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/txtSizeNormal" />
                                </FrameLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/viewHeight"
                                android:background="@color/borderEditText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/heightInstructionLayoutSecond"
                                android:baselineAligned="false"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".2"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/heightCheckBox"
                                        android:layout_height="@dimen/heightCheckBox"
                                        android:layout_gravity="center"
                                        android:background="@drawable/tick"
                                        android:contentDescription="@string/image" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >

                                    <TextView
                                        android:id="@+id/tvUpgradeNow"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center"
                                        android:layout_marginLeft="@dimen/paddingButtons"
                                        android:layout_marginRight="@dimen/paddingButtons"
                                        android:singleLine="false"
                                        android:text="@string/txtUpgradeNowMessage"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/txtSizeNormal"
                                        android:textStyle="bold"/>
                                </FrameLayout>
                            </LinearLayout>

                            <!--<View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/viewHeight"
                                android:background="@color/borderEditText" />-->
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvRegBenefitFifth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/paddingButtons"
                android:layout_weight=".55"
                android:gravity="center"
                android:singleLine="false"
                android:text="@string/txtRegisterBenefitFifth"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txtSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRegisterConfirmation"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/borderStrokeRadius"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/txtWouldYouLikeToRegister"
                android:textColor="@color/textBlueColor"
                android:textIsSelectable="true"
                android:textSize="@dimen/txtSizeMedium"
                android:textStyle="bold" />
            <!-- android:layout_marginTop="@dimen/paddings_Contents" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/paddingButtons"
                android:layout_marginTop="@dimen/paddingButtons"
                android:layout_weight="2.65"
                android:orientation="vertical" >

                <!--
                <TextView
                android:id="@+id/tvGroupCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txtGroupCode"
                android:textColor="@color/textGreyColorChooseConatct"
                android:textSize="@dimen/txtSizeNormal" />
                -->

                <EditText
                    android:id="@+id/etGroupCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightEditTextSmall"
                    android:background="@drawable/edittext_bg_name"
                    android:hint="@string/txtGroupCode"
                    android:inputType="text"
                    android:maxLength="15"
                    android:paddingEnd="@dimen/padding_marginEditText"
                    android:paddingLeft="@dimen/padding_marginEditText"
                    android:paddingRight="@dimen/padding_marginEditText"
                    android:paddingStart="@dimen/padding_marginEditText"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:textSize="@dimen/txtSizeMedium" />

                <!--
     android:layout_marginBottom="@dimen/paddingButtons"
                android:layout_marginTop="@dimen/paddingButtons"
                -->
                <!-- android:layout_marginBottom="@dimen/marginBottom_Buttons" -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/paddingButtons"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <Button
                        android:id="@+id/btnNo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/heightBtnSkip"
                        android:layout_weight="50"
                        android:background="@drawable/button_bg_skip"
                        android:gravity="center"
                        android:text="@string/txtRegisterPremiumLaterCaps"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSizeNormal"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnYes"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/heightBtnSkip"
                        android:layout_weight="50"
                        android:layout_marginLeft="@dimen/paddingButtons"
                        android:background="@drawable/button_bg_yes_green"
                        android:gravity="center"
                        android:text="@string/txtRegisterPremiumNowCaps"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txtSizeNormal"
                        android:textStyle="bold" />

                </LinearLayout>
                <!-- android:layout_marginTop="@dimen/paddingButtons" -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>