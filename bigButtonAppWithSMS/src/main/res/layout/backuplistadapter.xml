<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:padding="@dimen/paddindMargins" >

    <!--
         <LinearLayout
        android:id="@+id/llBackupNameParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rowHeight_Setting_CloudAdapter"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/paddingRightAdapter"
        android:layout_marginLeft="@dimen/paddingLeftMenuTitle"
        android:layout_marginRight="@dimen/paddingRightAdapter"
        android:layout_marginStart="@dimen/paddingLeftMenuTitle"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1" >
    -->

    <LinearLayout
        android:id="@+id/llBackupNameHolderChild"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rowHeight_Setting_CloudAdapter"
        android:layout_marginEnd="@dimen/paddingRightAdapter"
        android:layout_marginLeft="@dimen/paddingLeftMenuTitle"
        android:layout_marginRight="@dimen/paddingRightAdapter"
        android:layout_marginStart="@dimen/paddingLeftMenuTitle"
        android:gravity="start|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvBackupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/darkGreyColor"
            android:textIsSelectable="false"
            android:textSize="@dimen/txtSizeLarge" />

        <LinearLayout
            android:id="@+id/llImageIconHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imViewIcon"
                android:layout_width="@dimen/dimenClockIcon"
                android:layout_height="@dimen/dimenClockIcon"
                android:background="@drawable/clock"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/tvBackupDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingLeftMenuTitle"
                android:singleLine="true"
                android:textColor="@color/textBlueColor"
                android:textIsSelectable="false"
                android:textSize="@dimen/txtSizeMedium" />
        </LinearLayout>
    </LinearLayout>
    <!-- </LinearLayout> -->

</RelativeLayout>